{
  "info": {
    "name": "Bookworld - Products API",
    "_postman_id": "bookworld-products-001",
    "description": "Collection to test Product endpoints for Bookworld backend",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:5000",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Get product list",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/api/products",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "products"
          ]
        }
      }
    },
    {
      "name": "Create product",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"Sách mẫu Postman\",\n  \"slug\": \"sach-mau-postman\",\n  \"description\": \"Mô tả sách test\",\n  \"price\": 120000,\n  \"images\": [\"https://example.com/cover.jpg\"],\n  \"quantity\": 5\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/products",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "products"
          ]
        }
      }
    },
    {
      "name": "Get product by id",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/api/products/:id",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "products",
            ":id"
          ]
        }
      }
    },
    {
      "name": "Update product",
      "request": {
        "method": "PUT",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"price\": 99900,\n  \"quantity\": 12\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/products/:id",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "products",
            ":id"
          ]
        }
      }
    },
    {
      "name": "Delete product",
      "request": {
        "method": "DELETE",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/api/products/:id",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "products",
            ":id"
          ]
        }
      }
    }
  ]
}
